[Unit]
Description=Videotto Backend API
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/videotto/Backend
Environment="PATH=/home/ubuntu/videotto/Backend/venv/bin"
EnvironmentFile=/home/ubuntu/videotto/Backend/.env
ExecStart=/home/ubuntu/videotto/Backend/venv/bin/gunicorn -w 4 -b 0.0.0.0:5001 --timeout 300 app:app
Restart=always

[Install]
WantedBy=multi-user.target
